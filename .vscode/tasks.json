{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "C:/MinGW/bin/g++.exe",
      "args": [
        "-g",
        "main.cpp",
        "modules/**/*.cpp",
        "utils/**/*.cpp",
        "-o",
        "D:/learning/inventory-cpp/main.exe"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Generated task to build C++ file"
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++.exe build active file",
      "command": "C:\\MinGW\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
